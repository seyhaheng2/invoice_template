.page-header
  = link_to users_path, class: 'btn btn-default' do
    %span.glyphicon.glyphicon-list-alt
    Back
  = link_to edit_user_path(@user), class: 'btn btn-primary' do
    %span.glyphicon.glyphicon-pencil
    Edit
  %h1 Show user

%dl.dl-horizontal
  %dt Name:
  %dd= @user.name
  %dt Sex:
  %dd= @user.sex
  %dt Profile:
  %dd= @user.profile
  %dt Phone:
  %dd= @user.phone
  %dt Address:
  %dd= @user.address
  %dt Description:
  %dd= @user.description
